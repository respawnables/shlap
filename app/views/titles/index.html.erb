<p id="notice"><%= notice %></p>

<h1 class="text-center">Listing all Shlaps</h1>

<% @titles.each do |title| %>
  <div class="container mt-5 mb-5">
    <div class="row d-flex align-items-center justify-content-center">
      <div class="col-md-6">
        <div class="card shadow rounded">
          <div class="d-flex justify-content-between p-2 px-3">
            <div class="d-flex flex-row align-items-center">
              <div class="d-flex flex-column ml-2"><span class="name"><%= title.user.username %></span></div>
            </div>
            <div class="d-flex flex-row mt-1 ellipsis">
              <small class="mr-2"><%= time_ago_in_words title.created_at %></small>
              <i class="fa fa-ellipsis-h"></i></div>
          </div>
          <div class="p-2">
            <p class="text-justify ms-2"><%= title.text %></p>
            <hr>
            <div class="d-flex justify-content-between align-items-center">
              <div class="d-flex flex-row icons d-flex align-items-center"><i class="fa fa-heart"></i>
                <i class="fa fa-smile-o ml-2"></i></div>
              <div class="d-flex flex-row muted-color"><span><%= title.answers.count %> comments</span></div>
            </div>
            <hr>
            <div class="comments ms-3">
              <% title.answers.each do |answer| %>
                <div class="d-flex flex-row mb-2">
                  <div class="d-flex flex-column ml-2"><span class="name"><%= answer.user.username %></span>
                    <small class="comment-text"><%= answer.answer %></small>
                    <div class="d-flex flex-row align-items-center status">
                      <small><%= time_ago_in_words answer.created_at %></small></div>
                  </div>
                </div>
                <hr>
              <% end %>
              <div class="comment-input"><input type="text" class="form-control">
                <div class="fonts"><i class="fa fa-camera"></i></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
