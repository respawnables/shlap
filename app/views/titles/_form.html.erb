<div class="text-center mt-5">
  <h1>New Shlap</h1>
  <div class="container card shadow p-3 mb-5 bg-light rounded">
    <%= form_with(model: title) do |form| %>


  <div class="form-group row mt-5">
    <%= form.label :text, class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_area :text, class: "form-control", placeholder: "Enter text", rows: 5 %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Create Shlap', class: "btn btn-secondary mt-3" %>
  </div>
<% end %>
  </div>
</div>