<div class="text-center">
  <h1 class="mt-5">Log in</h1>
  <div class="container card shadow p-3 mb-5 bg-light rounded">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>

      <div class="form-group row mt-5">
        <%= f.label :username, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter your username" %>
        </div>
      </div>

      <div class="form-group row mt-5">
        <%= f.label :password, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
        </div>
      </div>

      <div class="form-group mt-3 mb-4">
        <%= f.submit "Log in" , class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'Back', root_path %>